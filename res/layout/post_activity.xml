<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/content_padding_size" >

    <LinearLayout
        android:id="@+id/post_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/parts_padding_size"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/post_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_title_label" />

        <EditText
            android:id="@+id/post_title_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_combobox_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/parts_padding_size" >

        <Spinner
            android:id="@+id/post_label_spiner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- スペーサー -->
        <View
            android:layout_width="@dimen/spacer_padding_size"
            android:layout_height="match_parent"/>
        
        <Spinner
            android:id="@+id/post_assignee_spiner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- スペーサー -->
        <View
            android:layout_width="@dimen/spacer_padding_size"
            android:layout_height="match_parent"/>
        
        <Spinner
            android:id="@+id/post_milestone_spiner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_body_label"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/parts_padding_size"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/post_body_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_body_label" />

        <EditText
            android:id="@+id/post_body_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_submit_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/parts_padding_size" >

        <Button
            android:id="@+id/post_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_submit_button_label" />
        
        <!-- スペーサー -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        
        <Button android:id="@+id/post_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_clear_button_label"/>
    </LinearLayout>

</LinearLayout>